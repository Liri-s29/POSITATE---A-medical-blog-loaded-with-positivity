<%- include("partials/header") -%>
<style>
    .postbox{
        display: inline;
        box-shadow: 5px 8px #0cc; 
        background-color: rgb(231, 253, 231);
    }
    .postbox:hover{
        box-shadow: 5px 0px #0cc inset; 
        /* background-color: #0cc; */
    }
    header {
        background-repeat: no-repeat;
        text-align: center;
        background-image: url("<%=asset.image%>");
        background-size: 100%;
        width: 100%;
        height: 400px;
    }
    .container{
        position: relative;
        
    }
</style>
</head>
<body>
    <header>
    <%- include("partials/navbar")-%>
    <div class="container">
        <h1><%=asset.name%></h1>
        <p>Find articles related to <%=asset.name%>...</p>
    </div>
    </header>
    <div class="col container ">
        <div class="row tm-row">
            <% blogs.forEach((blog)=>{%>
                <div class="col-12 col-md-11 tm-post mb-4 postbox mt-2"  >
                    <hr style="border-top: 5px solid #0CC;">
                    
                        
                    <h2 class="tm-pt-30  tm-post-title"><%= blog.title %></h2>
                                        
                    <p class="tm-pt-30">
                        <%=blog.content.substring(0,301)%>... <a href="/category/blog/<%=blog._id%>w<%=blog.category%>">Read More</a>
                    </p>
                    <div class="d-flex justify-content-between tm-pt-45">
                        <span class=""><%= blog.createdAt%></span>
                    </div>
                    <hr style="border-top: 5px solid #0CC;">
                    
                    <img src="<%=blog.image%>" class="mb-2" style="height: 50px; width: 50px; border-radius: 100%;float: left"  >
                    <h5 style="float: right" >&nbsp; By <%= blog.name%></h5>
                    <h5 style="float: right"> <%= blog.comment.length%> Comments</h5>
                        
                    
                </div>
            <%})%>
            
        </div>
    </div>
    <script src='home/js/jquery.js'></script>
    <script src='home/js/plugins.js'></script>
    <script src='home/js/scripts.js'></script>
    <script src='home/js/masonry.pkgd.min.js'></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
	integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
	crossorigin="anonymous"></script>
<%- include("partials/footer") -%>