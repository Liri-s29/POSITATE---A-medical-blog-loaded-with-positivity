<%- include("partials/header") -%>
<style>
    .postbox{
        display: inline;
        background-color: rgb(231, 253, 231);
        border-radius: 20px;
        transition: box-shadow .3s;
    }
    .postbox:hover{
        box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 204, 204, 0.301) 0px 30px 60px -30px;    
        cursor: pointer;    
    }
    .boom{
        background-repeat: no-repeat;
        text-align: center;
        background-image: url("<%=asset.image%>");
        background-size: 100%;
        width: 100%;
        height: 400px;
        padding-top: 100px;
        padding-left: 100px;
        font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        
    }
    .boom h1{
        font-size: 100px;
        color:rgb(66, 66, 66)
    }
    .container{
        position: relative;
        
    }
</style>
</head>
<body>
    <header>
    <%- include("partials/navbar")-%>
    <div class=" boom">
        <h1><%=asset.name%></h1>
    </div>
    </header>
    <div class="col container">
        <div class="row">
            <% blogs.forEach((blog)=>{%>
                
                <div class="col-12 col-md-11 mt-2 postbox mx-auto" onclick="location.href='/category/blog/<%=blog._id%>w<%=blog.category%>'" >
                    <div >  
                     <hr style="border-top: 5px solid #0CC;">
                    
                        
                    <h2 ><%= blog.title %></h2>
                                        
                    <p >
                        <%=blog.content.substring(0,301)%>... <a href="/category/blog/<%=blog._id%>w<%=blog.category%>">Read More</a>
                    </p>
                    <div >
                        <span ><%= blog.createdAt%></span>
                    </div>
                    <hr style="border-top: 5px solid #0CC;">
                    
                    <img src="<%=blog.image%>" class="mb-2" style="height: 50px; width: 50px; border-radius: 100%;float: left"  >
                    <h5 style="float: right" >&nbsp; By <%= blog.name%></h5>
                    <h5 style="float: right"> <%= blog.comment.length%> Comments</h5>
                    </div>
                        
                 
                    </div>
            <%})%>
        </div>    
        
    </div>
    
    <script src='home/js/jquery.js'></script>
    <script src='home/js/plugins.js'></script>
    <script src='home/js/scripts.js'></script>
    <script src='home/js/masonry.pkgd.min.js'></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
	integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
	crossorigin="anonymous"></script>
<%- include("partials/footer") -%>